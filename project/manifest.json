{
  "manifest_version": 3,
  "name": "WordsBark",
  "version": "1.0",
  "description": "Your personal dictionary and reminder extension.",
  "permissions": ["storage", "notifications", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128x128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://api.dictionaryapi.dev/*"]
}
